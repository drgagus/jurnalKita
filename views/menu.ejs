<!DOCTYPE html>
<html lang="en">

<head>
    <title><%= process.env.appName %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="/logo.png">
    <link rel="shortcut icon" type="image/x-icon" href="/logo.png">

    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/templatemo.css">
    <link rel="stylesheet" href="/assets/css/custom.css">
    <!-- Slick -->
    <link rel="stylesheet" type="text/css" href="/assets/css/slick.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/slick-theme.css">
    <!-- Load fonts style after rendering the layout styles -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;200;300;400;500;700;900&display=swap">
    <link rel="stylesheet" href="/assets/css/fontawesome.min.css">

</head>

<body>
    <%- include('./header/userheader') %>
    
    <!-- Start Categories -->
    <section class="container">
      
      <div id="carousel-category">
          <% categories.forEach(category=>{ %>
          <div class="p-2 pb-3">
              <a href="/category/<%= category.slug%>/detail"><img src="/thumb/category/<%= category.thumb%>" class="rounded-circle img-fluid border"></a>
              <h2 class="h5 text-center mt-3 mb-3"><%= category.title %>
                <div class="btn-group">
                  <button class="btn dropdown-toggle h5 text-center" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false"></button>
                  <ul class="dropdown-menu p-0" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item bg-primary" href="/category/<%= category.slug%>/detail">show</a></li>
                    <li>
                    <li><a class="dropdown-item bg-warning" href="/category/<%= category.slug%>">edit</a></li>
                    <li>
                      <form action="/category/<%= category.slug %>?_method=DELETE" class="" method="post">
                        <button type="submit" class="dropdown-item btn btn-danger bg-danger">delete</button>
                      </form>
                    </li>
                  </ul>
                </div>
              </h2>
          </div>
          <% }) %>
      </div>

    </section>
  <!-- End Categories -->


  <!-- Start Journals -->
  <section class="bg-light">
      <div class="container">
          <div class="row py-3">
              <% journals.forEach(journal=>{ %>
              <div class="col-12 col-md-3 mb-4">
                  <div class="card h-100">
                      <a href="/journal/<%= journal.slug%>/detail">
                          <img src="./thumb/journal/<%= journal.thumb %>" class="card-img-top" alt="...">
                      </a>
                      <div class="card-body">
                          <h5 class="fw-bold text-decoration-none text-dark"><%= journal.title %>
                            <div class="btn-group">
                              <button class="btn dropdown-toggle h5 text-center" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false"></button>
                              <ul class="dropdown-menu p-0" aria-labelledby="dropdownMenuButton">
                                <li><a class="dropdown-item bg-primary" href="/journal/<%= journal.slug%>/detail">show</a></li>
                                <li>
                                <li><a class="dropdown-item bg-warning" href="/journal/<%= journal.slug%>">edit</a></li>
                                <li>
                                  <form action="/journal/<%= journal.slug %>?_method=DELETE" class="" method="post">
                                    <button type="submit" class="dropdown-item btn btn-danger bg-danger">delete</button>
                                  </form>
                                </li>
                              </ul>
                            </div>
                          </h5>
                      </div>
                  </div>
              </div>
              <% }) %>
          </div>
          <div class="row">
            <div class="col-12">
                <nav aria-label="..." class="">
                    <ul class="pagination pagination-md">
                        <% for(let p = 1 ; p <= Math.floor(count/limit)+1 ; p++) {%>
                      <li class="page-item <% if(page == p) { %> active <% } %>" aria-current="page"><a class="page-link" href="?page=<%= p %>&limit=<%= limit %>"><%= p %></a></li>
                      <% } %>
                    </ul>
                  </nav>
            </div>
        </div>
      </div>
  </section>
  <!-- End Journals -->

  <%- include('./footer/guestfooter') %>
  
    <!-- Start Script -->
    <script src="/assets/js/jquery-1.11.0.min.js"></script>
    <script src="/assets/js/jquery-migrate-1.2.1.min.js"></script>
    <script src="/assets/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/templatemo.js"></script>
    <script src="/assets/js/custom.js"></script>
    <!-- End Script -->
    <!-- Start Slider Script -->
    <script src="/assets/js/slick.min.js"></script>
    <script>
        $('#carousel-category').slick({
            infinite: true,
            arrows: false,
            slidesToShow: 4,
            slidesToScroll: 3,
            dots: false,
            responsive: [{
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: 3,
                        slidesToScroll: 3
                    }
                },
                {
                    breakpoint: 600,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 3
                    }
                },
                {
                    breakpoint: 480,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 3
                    }
                }
            ]
        });
    </script>
    <!-- End Slider Script -->
</body>

</html>
