<!DOCTYPE html>
<html lang="en">

<head>
    <title><%= process.env.appName %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="/logo.png">
    <link rel="shortcut icon" type="image/x-icon" href="/logo.png">

    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/templatemo.css">
    <link rel="stylesheet" href="/assets/css/custom.css">

    <!-- Load fonts style after rendering the layout styles -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;200;300;400;500;700;900&display=swap">
    <link rel="stylesheet" href="/assets/css/fontawesome.min.css">

    <!-- Slick -->
    <link rel="stylesheet" type="text/css" href="/assets/css/slick.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/slick-theme.css">

</head>

<body>
    <%- include('./../header/userheader') %>

    <section class="bg-light">
        <div class="container pb-5">
            <div class="row">
                <!-- col end -->
                <div class="col-lg-12 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="h2"><%= journal.title %>
                                <div class="btn-group">
                                    <button class="btn dropdown-toggle h5 text-center" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false"></button>
                                    <ul class="dropdown-menu p-0" aria-labelledby="dropdownMenuButton">
                                      <li><a class="dropdown-item bg-info" href="/journal/<%= journal.slug%>/thumb">thumb</a></li>
                                      <li>
                                      <li><a class="dropdown-item bg-warning" href="/journal/<%= journal.slug%>">edit</a></li>
                                      <li>
                                        <form action="/journal/<%= journal.slug %>?_method=DELETE" class="" method="post">
                                          <button type="submit" class="dropdown-item btn btn-danger bg-danger">delete</button>
                                        </form>
                                      </li>
                                    </ul>
                                </div>
                            </h1>
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <h6>Category:</h6>
                                </li>
                                <li class="list-inline-item">
                                    <p class="text-muted"><strong><a href="/category/<%= journal.category_id.slug %>/detail" class="fw-bold text-decoration-none"><%= journal.category_id.title %></a></strong></p>
                                </li>
                            </ul>

                            <h6>Abstract:</h6>
                            <%  journal.abstract.split('\n').forEach(line=>{ %>
                                <p style="text-align: justify"><%= line %></p>
                            <% }) %>
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <h6>Date of Journal:</h6>
                                </li>
                                <li class="list-inline-item">
                                    <p class="text-muted"><strong><%= journal.dateofjournal.toDateString()%></strong></p>
                                </li>
                            </ul>
                            <ul class="list-inline">
                                <div class="btn-group">
                                    <button class="btn btn-outline-dark dropdown-toggle h5 text-center" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">go to journal</button>
                                    <ul class="dropdown-menu p-0" aria-labelledby="dropdownMenuButton">
                                        <% if(journal.linkofind){ %>
                                            <li><a class="dropdown-item bg-info" href="/journal/<%=journal.slug%>/ind">Indonesia</a></li>
                                        <% }else{ %>
                                            <li><button class="dropdown-item btn btn-secondary bg-secondary">Indonesia</button></li>
                                        <% } %>
                                        <% if(journal.linkofeng){ %>
                                            <li><a class="dropdown-item bg-success" href="/journal/<%=journal.slug%>/eng">English</a></li>
                                        <% }else{ %>
                                            <li><button class="dropdown-item btn btn-secondary bg-secondary">English</button></li>
                                        <% } %>
                                    </ul>
                                </div>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('./../footer/guestfooter') %>

    <!-- Start Script -->
    <script src="/assets/js/jquery-1.11.0.min.js"></script>
    <script src="/assets/js/jquery-migrate-1.2.1.min.js"></script>
    <script src="/assets/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/templatemo.js"></script>
    <script src="/assets/js/custom.js"></script>
    <!-- End Script -->

    <!-- Start Slider Script -->
    <script src="/assets/js/slick.min.js"></script>
    <script>
        $('#carousel-related-product').slick({
            infinite: true,
            arrows: false,
            slidesToShow: 4,
            slidesToScroll: 3,
            dots: true,
            responsive: [{
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: 3,
                        slidesToScroll: 3
                    }
                },
                {
                    breakpoint: 600,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 3
                    }
                },
                {
                    breakpoint: 480,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 3
                    }
                }
            ]
        });
    </script>
    <!-- End Slider Script -->
</body>

</html>